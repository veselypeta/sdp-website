{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build/server",
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true
  },
  "lib": ["es2015"],
  "exclude": [
    "./client",
    "node_modules"
  ],
  "include": [
    "server/**/*.ts"
  ]
}
